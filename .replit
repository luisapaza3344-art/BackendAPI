modules = ["rust", "go", "python-3.11", "postgresql-16", "nodejs-20"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0", "javascript_stripe:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Payment Gateway"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Crypto Attestation Agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Security Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Auth Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Enterprise API Gateway"

[[workflows.workflow]]
name = "Payment Gateway"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd services/rust/payment-gateway && CARGO_BUILD_JOBS=2 cargo run --no-default-features --features \"ml-minimal pq-dilithium pq-kyber\" --bin payment-gateway"

[[workflows.workflow]]
name = "Crypto Attestation Agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd services/go/crypto-attestation-agent && go run cmd/main.go"
waitForPort = 9000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Security Service"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd services/rust/security-service && cargo run"
waitForPort = 8000

[[workflows.workflow]]
name = "Auth Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd services/go/auth-service && SERVER_PORT=8099 TLS_ENABLED=false go run cmd/main.go"
waitForPort = 8099

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Enterprise API Gateway"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd services/go/api-gateway && PORT=9000 go run cmd/main.go"
waitForPort = 9000

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 8099
externalPort = 8099

[[ports]]
localPort = 9000
externalPort = 9000

[[ports]]
localPort = 37431
externalPort = 3000

[nix]
channel = "stable-25_05"
packages = ["openssl", "pkg-config"]
